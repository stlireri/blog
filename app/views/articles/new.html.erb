<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h3 class="header">New Article</h3>
      <hr/>
      <%= form_for :article, url: articles_path do |form| %>
        <div class="form-group">
          <%= form.label :title %><br>
          <%= form.text_field :title, class:"form-control", placeholder: "Enter articles' title"%>
        </div>

        <div class="form-group">
          <%= form.label :text %><br>
          <%= form.text_area :text, class:"form-control" %>
        </div>

        <div>
          <%= form.submit 'Create Article', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>